<!ENTITY % citation SYSTEM "eml-literature.dtd" >
%citation;

<!ENTITY % coverage SYSTEM "eml-coverage.dtd">
%coverage;

<!ENTITY % protocol SYSTEM "eml-protocol.dtd">
%protocol;

<!ELEMENT attribute (references | (attributeName, attributeLabel*,
                     attributeDefinition, unit, storageType?, measurementScale,
                     attributeDomain, missingValueCode*, precision?,
                     accuracy?, (%coverage;)?, (%protocol;)?))>
<!ELEMENT references (#PCDATA)>
<!ELEMENT attributeName (#PDATA)>
<!ELEMENT attributeLabel (#PCDATA)>
<!ELEMENT attributeDefinition (#PCDATA)>
<!ELEMENT unit (standardUnit | customUnit)>
<!ELEMENT standardUnit (#PCDATA)>
<!ELEMENT (customUnit (#PCDATA)>
<!ELEMENT storageType (#PCDATA)>
<!ELEMENT measurementScale (#PCDATA)>
<!ELEMENT attributeDomain (enumeratedDomain | textDomain | numericDomain)>
<!ELEMENT enumeratedDomain (codeList | externalCodeSet | entityCodeList)+>
<!ELEMENT codeList (code, definition, source?)>
<!ELEMENT code (#PCDATA)>
<!ELEMENT definition (#PCDATA)>
<!ELEMENT source (#PCDATA)>
<!ELEMENT externalCodeSet (codesetName | ((%citation;) | codesetURL)+)>
<!ELEMENT codesetURL (#PCDATA)>
<!ELEMENT entityCodeList (entityReference, valueAttributeReference, definitionAttributeReference)>
<!ELEMENT entityReference (#PCDATA)>
<!ELEMENT valueAttributeReference (#PCDATA)>
<!ELEMENT definitionAttributeReference (#PCDATA)>
<!ELEMENT textDomain (definition, pattern*, source?)>
<!ELEMENT definition (#PCDATA)>
<!ELEMENT pattern (#PCDATA)>
<!ELEMENT source (#PCDATA)>
<!ELEMENT numericDomain (minimum?, maximum?)>
<!ELEMENT minimum (#PCDATA)>
<!ELEMENT maximum (#PCDATA)>
<!ELEMENT missingValueCode(code, codeExplanation)>
<!ELEMENT code (#PCDATA)>
<!ELEMENT codeExplanation (#PCDATA)>
<!ELEMENT precision (#PCDATA)>
<!ELEMENT accuracy (attributeAccuracyReport, quantitativeAttributeAccuracyAssessment*)>
<!ELEMENT attributeAccuracyReport (#PCDATA)>
<!ELEMENT quantitativeAttributeAccuracyAssessment (attributeAccuracyValue, attributeAccuracyExplanation)>
<!ELEMENT attributeAccuracyValue (#PCDATA)>
<!ELEMENT attributeAccuracyExplanation (#PCDATA)>

