<!ENTITY % citation SYSTEM "eml-literature.dtd" >
%citation;
<!ENTITY % LitCitation "((identifier+, shortName?, title+, originator+, pubDate?, 
                         pubPlace?, series?, abstract?, keywordSet*, 
                         additionalInfo*, rights*, (onlineURL | offlineMedium)*, 
                         triple*), (ISBN?, ISSN?, (article | book | 
                         chapter | manuscript | report | thesis)))">

<!ENTITY % coverage SYSTEM "eml-coverage.dtd">
%coverage;
<!ENTITY % TemporalCoverage "((singleDateTime | multipleDatesTimes | rangeOfDates))">

<!ENTITY % party SYSTEM "eml-party.dtd">
%party; 
<!ENTITY % ResponsibleParty "((individualName|organizationName|positionName),
                             address*, phone*, electronicMailAddress*, 
                             onlineLink*, role+)">

<!ELEMENT attribute (identifier+, attribute+)>
<!ELEMENT identifier (#PCDATA)>
<!ATTLIST identifier system CDATA #IMPLIED>
<!ELEMENT attribute (attributeName, attributeLabel*, attributeDefinition, unit?, 
                     storageType?, measurementScale, attributeDomain, missingValueCode*, 
                     precision+, accuracy)>
<!ELEMENT attributeName (#PCDATA)>
<!ELEMENT attributeLabel (#PCDATA)>
<!ELEMENT attributeDefinition (#PCDATA)>
<!ELEMENT unit (#PCDATA)>
<!ELEMENT measurementScale (#PCDATA)>
<!ELEMENT storageType (#PCDATA)>
<!ATTLIST storageType unitSystem CDATA "STMML">
<!ELEMENT attributeDomain (enumeratedDomain | textDomain | numericDomain+)>
<!ELEMENT missingValueCode (code, codeExplanation)>
<!ELEMENT code (#PCDATA)>
<!ELEMENT codeExplanation (#PCDATA)>
<!ELEMENT precision (#PCDATA)>
<!ELEMENT enumeratedDomain (code, definition, source?)>
<!ATTLIST enumeratedDomain enforced CDATA "yes">
<!ELEMENT textDomain (definition, pattern*, source?)>
<!ELEMENT numericDomain (minimum?, maximum?)>
<!ELEMENT code (#PCDATA)>
<!ELEMENT definition (#PCDATA)>
<!ELEMENT source (#PCDATA)>
<!ELEMENT pattern (#PCDATA)>
<!ELEMENT minimum (#PCDATA)>
<!ELEMENT maximum (#PCDATA)>
<!ELEMENT accuracy (%Accuracy;)>

<!-- DataQuality entity that goes with the DataQuality type in eml-attribute.xsd -->
<!ENTITY % Accuracy "(attributeAccuracyReport, quantitativeAttributeAccuracyAssessment)">
<!ELEMENT attributeAccuracyReport (#PCDATA)>
<!ELEMENT quantitativeAttributeAccuracyAssessment (attributeAccuracyReport, 
                                                   attributeAccuracyExplanation)>
<!ELEMENT attributeAccuracyReport (#PCDATA)>
<!ELEMENT attributeAccuracyExplanation (#PCDATA)>

