<?xml version="1.0"?>
<xs:schema targetNamespace="eml:attribute-2.0.0beta8" 
           xmlns="eml:attribute-2.0.0beta8" 
           xmlns:rp="eml:party-2.0.0beta8" 
           xmlns:cov="eml:coverage-2.0.0beta8" 
           xmlns:lit="eml:literature-2.0.0beta8" 
           xmlns:doc="eml:documentation-2.0.0beta8" 
           xmlns:xs="http://www.w3.org/2001/XMLSchema">
  <xs:import namespace="eml:documentation-2.0.0beta8" 
             schemaLocation="eml-documentation.xsd"/>
  <xs:annotation>
    <xs:documentation>
