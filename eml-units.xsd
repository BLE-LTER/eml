    </xs:documentation>
    <xs:appinfo>
      <doc:moduleDocs>
        <doc:moduleName>eml-units</doc:moduleName>
        <doc:moduleDescription>
          This module is an implementation of STMML (http://www.xml-cml.org/stmml).
          It should be used to define the unit dictionary for EML.  The
          unit dictionary should precisely define every unit of measure
          used to describe a data point measurement.  If a needed unit
          is not in the dictionary, it should be added before the unit is
          used. 
        </doc:moduleDescription>
        <doc:recommendedUsage>
          eml-unit should never be instantiated with a package, rather it is
          used to define the EML data unit dictionary only.
        </doc:recommendedUsage>
        <doc:standAlone>
          yes
        </doc:standAlone>
      </doc:moduleDocs>
    </xs:appinfo>
  </xs:annotation>
  
  <xs:simpleType name="dimensionType" id="st.dimensionType">
    <xs:restriction base="xs:string">
      <xs:enumeration value="mass"/>
      <xs:enumeration value="length"/>
      <xs:enumeration value="time"/>
      <xs:enumeration value="charge"/>
      <xs:enumeration value="amount"/>
      <xs:enumeration value="luminosity"/>
      <xs:enumeration value="temperature"/>
      <xs:enumeration value="dimensionless"/>
      <xs:enumeration value="angle"/>
    </xs:restriction>
  </xs:simpleType>
  
  <xs:element name="dimension" id="el.dimension">
    <xs:complexType>
      <xs:attribute name="name" type="uni:dimensionType" use="required"/>
      <xs:attribute name="power" type="xs:decimal" default="1"/>
    </xs:complexType>
  </xs:element>
  
  <xs:element name="unitList" id="el.unitList">
    <xs:complexType>
      <xs:sequence>
        <xs:element ref="uni:unitType" minOccurs="0" maxOccurs="unbounded"/>
        <xs:element ref="uni:unit" minOccurs="0" maxOccurs="unbounded"/>
      </xs:sequence>
      <xs:attribute name="href" type="xs:anyURI"/>
    </xs:complexType>
  </xs:element>
  
  <xs:element name="unitType" id="el.unitType">
    <xs:complexType>
      <xs:sequence>
        <xs:element ref="uni:dimension" minOccurs="0" maxOccurs="unbounded"/>
      </xs:sequence>
      <xs:attribute name="name" type="xs:string" use="required"/>
    </xs:complexType>
  </xs:element>
  
  <xs:element name="unit" id="el.unit">
    <xs:complexType>
      <xs:choice minOccurs="0" maxOccurs="unbounded">
        <xs:element ref="uni:description"/>
        <xs:element ref="uni:annotation"/>
      </xs:choice>
      <xs:attribute name="id" type="xs:string" use="required"/>
      <xs:attribute name="abbreviation" type="xs:string"/>
      <xs:attribute name="name" type="xs:string"/>
      <xs:attribute name="parentSI" type="xs:string"/>
      <xs:attribute name="unitType" type="xs:string"/>
      <xs:attribute name="multiplierToSI" type="xs:decimal" default="1"/>
      <xs:attribute name="constantToSI" type="xs:decimal" default="0"/>
    </xs:complexType>
  </xs:element>
  
  <xs:element name="description" id="el.description">
    <xs:complexType mixed="true">
      <xs:sequence minOccurs="0" maxOccurs="unbounded">
        <xs:any processContents="lax"/>
      </xs:sequence>
      <xs:attributeGroup ref="uni:sourceGroup"/>
      <xs:attribute name="class" type="xs:string"/>
    </xs:complexType>
  </xs:element>
  
  <xs:element name="annotation" id="el.annotation">
    <xs:complexType mixed="true">
      <xs:choice minOccurs="0" maxOccurs="unbounded">
        <xs:element ref="uni:documentation"/>
        <xs:element ref="uni:appinfo"/>
      </xs:choice>
      <xs:attribute name="source" type="xs:anyURI"/>
    </xs:complexType>
  </xs:element>
  
  <xs:attributeGroup name="sourceGroup" id="attGp.source">
    <xs:attribute name="source" type="xs:anyURI" id="att.source"/>
  </xs:attributeGroup>
  
  <xs:element name="documentation" id="el.documentation">
    <xs:complexType mixed="true">
      <xs:sequence minOccurs="0" maxOccurs="unbounded">
        <xs:any processContents="lax"/>
      </xs:sequence>
      <xs:attributeGroup ref="uni:sourceGroup"/>
      <xs:attributeGroup ref="uni:idGroup"/>
    </xs:complexType>
  </xs:element>
  
  <xs:element name="appinfo" id="el.appinfo">
    <xs:complexType mixed="true">
      <xs:sequence minOccurs="0" maxOccurs="unbounded">
        <xs:any processContents="lax"/>
      </xs:sequence>
      <xs:attribute name="source" type="xs:anyURI"/>
    </xs:complexType>
  </xs:element>
  
  <xs:attributeGroup name="idGroup" id="attGp.id">
    <xs:attribute name="id" type="uni:idType" id="att.id"/>
  </xs:attributeGroup>
  
  <xs:simpleType name="idType" id="st.idType">
    <xs:restriction base="xs:string">
      <xs:pattern value="[A-Za-z0-9_-]+(:[A-Za-z0-9_-]+)?"/>
    </xs:restriction>
  </xs:simpleType>
</xs:schema>
