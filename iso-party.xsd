<?xml version ="1.0"?>
<xs:schema xmlns:xs="http://www.w3.org/1999/XMLSchema"
           targetNamespace="iso:ResponsibleParty">

  <annotation>
    <documentation>
    '$RCSfile: iso-party.xsd,v $'
      Purpose: This is an XML Schema document for the "responsibleParty" 
               class as described in "ISO 19115.3, Geographic Information, 
               Metadata" draft standard.  It is a work in progress, as is 
               the standard itself.
    Copyright: 2000 Regents of the University of California and the
               National Center for Ecological Analysis and Synthesis
      Authors: Matt Jones

     '$Author: berkley $'
       '$Date: 2000-10-26 16:17:40 $'
   '$Revision: 1.9 $'
    </documentation>
  </annotation>

  <complexType name="ResponsibleParty" content="elementOnly">
    <sequence>
      <choice minOccurs="1" maxOccurs="unbounded">
        <element name="individualName" type="Person" />
        <element name="organizationName" type="string" />
        <element name="positionName" type="string" />
      </choice>
      <element name="contactInfo" 
               type="Contact" minOccurs="0" maxOccurs="unbounded" />
      <element name="roleCode" 
               type="RoleCode" minOccurs="1" maxOccurs="unbounded" />
    </sequence>
  </complexType>

  <complexType name="Person" content="elementOnly">
    <sequence>
      <element name="salutation" 
               type="string" minOccurs="0" maxOccurs="unbounded" /> 
      <element name="givenName" 
               type="string" minOccurs="0" maxOccurs="unbounded" />
      <element name="surName" 
               type="string" minOccurs="1" maxOccurs="1" />
    </sequence>
  </complexType>
  
  <complexType name="Contact" content="elementOnly">
    <sequence>
      <element name="phone" 
               type="Telephone" minOccurs="0" maxOccurs="1" />
      <element name="address" 
               type="Address" minOccurs="0" maxOccurs="1" />
      <element name="onlineResource" 
               type="OnlineResource" minOccurs="0" maxOccurs="1" />
      <element name="hoursOfService" 
               type="string" minOccurs="0" maxOccurs="1" />
      <element name="contactInstructions" 
               type="string" minOccurs="0" maxOccurs="1" />
    </sequence>
  </complexType>

  <complexType name="Telephone" content="elementOnly">
    <sequence>
      <element name="voice" 
               type="string" minOccurs="0" maxOccurs="unbounded" />
      <element name="facsimile" 
               type="string" minOccurs="0" maxOccurs="unbounded" />
      <sequence minOccurs="0" maxOccurs="unbounded">
        <element name="other" type="string" />
        <element name="otherType" type="string" />
      </sequence>
    </sequence>
  </complexType>
  <!-- The constraint that "other" is required if voice or facsimile are
       not provided has not been expressed in the Telephone type yet -->

  <complexType name="Address" content="elementOnly">
    <sequence>
      <element name="deliveryPoint" 
               type="string" minOccurs="0" maxOccurs="unbounded" />
      <element name="city" 
               type="string" minOccurs="0" maxOccurs="1" />
      <element name="administrativeArea" 
               type="string" minOccurs="0" maxOccurs="1" />
      <element name="postalCode" 
               type="string" minOccurs="0" maxOccurs="1" />
      <element name="country" 
               type="string" minOccurs="0" maxOccurs="1" />
      <element name="electronicMailAddress" 
               type="string" minOccurs="0" maxOccurs="unbounded" />
    </sequence>
  </complexType>

  <complexType name="OnlineResource" content="elementOnly">
    <sequence>
      <element name="linkage" 
               type="URL" minOccurs="1" maxOccurs="1" />
      <element name="protocol" 
               type="string" minOccurs="0" maxOccurs="1" />
      <element name="applicationProfile" 
               type="string" minOccurs="0" maxOccurs="1" />
      <element name="name" 
               type="string" minOccurs="0" maxOccurs="1" />
      <element name="description" 
               type="string" minOccurs="0" maxOccurs="1" />
      <element name="functionCode" 
               type="string" minOccurs="0" maxOccurs="1" />
    </sequence>
  </complexType>

  <simpleType name="URL" base="string" /> 
  <!-- Could add restrictions here to make it conform to URL syntax -->
  
    <!-- Role code domain take from ISO -->
  <xs:simpleType name = "RoleCode" base = "string" >
	<xs:enumeration value = "contentProvider" />
	<xs:enumeration value = "custodianSteward" />
  <xs:enumeration value = "owner" />
  <xs:enumeration value = "user" />
	<xs:enumeration value = "distributor" />
	<xs:enumeration value = "metadataProvider" />
	<xs:enumeration value = "originator" />
	<xs:enumeration value = "pointOfContact" />
	<xs:enumeration value = "principalInvestigator" />
	<xs:enumeration value = "processor" />
	<xs:enumeration value = "publisher" />
	<xs:enumeration value = "author" />
	<xs:enumeration value = "editor" />
  </xs:simpleType>
  
</xs:schema>
