<project name="eml" default="docs" basedir=".">

   <target name="init">
     <property name="build.docs" value="docs" /> 
     <property name="xmlp" 
               value="/usr/local/devtools/xerces-1.3.0/xerces.jar" />
     <property name="cpath" value="${xmlp}:." />
   </target>

   <!-- Generate HTML documentation using an XSLT transform -->
   <target name="docs" depends="init">
     <mkdir dir="${build.docs}"/>
     <style basedir="." destdir="${build.docs}"
            style="eml-documentation.xsl" 
            includes="eml-access.xsd"
            processor="xalan"> 
     </style> 
     <copy todir="${build.docs}" filtering="no">
       <fileset dir=".">
         <include name="eml-documentation.css"/>
       </fileset>
     </copy>
   </target>

   <!-- Build the java application in this directory -->
   <target name="compile" depends="init">
       <javac srcdir="." destdir="." classpath="${cpath}" /> 
   </target> 
</project>
