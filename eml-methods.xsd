    <xs:appinfo>
      <doc:moduleDocs>
        <doc:moduleName>eml-methods</doc:moduleName>
        <doc:moduleDescription>The EML Methods Module describes the methods followed in the creation of the dataset, including description of
        field, laboratory and processing steps, sampling methods and units, quality control proceudures.</doc:moduleDescription>
        <doc:recommendedUsage>All datasets</doc:recommendedUsage>
        <doc:standAlone>no</doc:standAlone>
      </doc:moduleDocs>
    </xs:appinfo>
