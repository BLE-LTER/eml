<!ENTITY % entity SYSTEM "eml-entity.dtd">
%entity;

<!ELEMENT spatialGrid ((%SpatialRepresentation;), cellType?, cellOrigin?, rows,
                       columns, verticals?, scanResolution?, groundSpacing?,
                       cellDomain?)>
<!ELEMENT cellType (#PCDATA)>
<!ELEMENT cellOrigin (#PCDATA)>
<!ELEMENT rows (#PCDATA)>
<!ELEMENT columns (#PCDATA)>
<!ELEMENT verticals (#PCDATA)>
<!ELEMENT scanResolution (%ScanResolution;)>
<!ENTITY % ScanResolution "(xResolution, yResolution, zResolution)">
<!ELEMENT xResolution (%PixelResolution;)>
<!ELEMENT yResolution (%PixelResolution;)>
<!ELEMENT zResolution (%PixelResolution;)>
<!ENTITY % PixelResolution "(pixelsPerUnit, unit)">
<!ELEMENT pixelsPerUnit (#PCDATA)>
<!ELEMENT unit (#PCDATA)>
<!ELEMENT groundSpacing (xSpacing, ySpacing, zSpacing)>
<!ELEMENT xSpacing (#PCDATA)>
<!ELEMENT ySpacing (#PCDATA)>
<!ELEMENT zSpacing (#PCDATA)>
<!ELEMENT cellDomain (toneGradiation?, bitsPerBand?, cellAttributeDescription, cellUnit)>
<!ELEMENT toneGradiation (#PCDATA)>
<!ELEMENT bitsPerBand (#PCDATA)>
<!ELEMENT cellAttributeDescription (#PCDATA)>
<!ELEMENT cellUnit (#PCDATA)>

