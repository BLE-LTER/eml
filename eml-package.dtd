<!-- EML DTD document that defines the structured metadata
     model used to create a symbolic link from metadata->metadata and
     metadata->data files which show a relationship between the data. -->

<!ENTITY % resourceInfo SYSTEM "./eml-resource.dtd">
%resourceInfo;
<!-- The root element, which represents a data package and includes a
     list of relationships between metadata and data file(s) that are
     members of the package. -->
<!ELEMENT eml-package (identifier, resource, triple*) >
<!ELEMENT identifier (#PCDATA)>

<!-- The triple element, which list all relationships in the package -->
<!ELEMENT triple (subject, relationship, object) >

<!-- Subject is the identifier of the metadata or data file that is 
     used to describe another object according the the relatinship. -->
<!ELEMENT subject (#PCDATA) >

<!-- The type of relationship of subject->object -->
<!ELEMENT relationship (#PCDATA) >

<!-- Object is an identifier for the metadata or data file that 
     is the subject of this relationship.-->
<!ELEMENT object (#PCDATA) >
