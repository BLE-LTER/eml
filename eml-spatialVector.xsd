    <xs:appinfo>
      <doc:moduleDocs>
        <doc:moduleName>eml-spatialVector</doc:moduleName>
        <doc:moduleDescription>The eml-spatialVector module allows for the
        description of spatial vectors in a GIS system. Specific attributes
        of a spatial vector can be documented here including the vector's
        geometric object type and topology layer.</doc:moduleDescription>
        <doc:recommendedUsage>all spatial datasets that use spatial
        vectors</doc:recommendedUsage>
        <doc:standAlone>yes</doc:standAlone>
        <doc:relationship>
          <doc:moduleName>eml-dataset</doc:moduleName>
          <doc:relationshipType>has spatial vector information
          for</doc:relationshipType>
        </doc:relationship>
      </doc:moduleDocs>
    </xs:appinfo>
  </xs:annotation>
  <xs:complexType name="SpatialVector">
    <xs:choice>
      <xs:element name="content" type="SpatialVectorType" />
      <xs:element name="references" type="xs:string" />
    </xs:choice>
  </xs:complexType>
  <xs:element name="spatialVector" type="SpatialVectorType">
    <xs:annotation>
      <xs:appinfo>
        <doc:tooltip>Description of an image layer created from a sensor or
        scanner</doc:tooltip>
        <doc:summary>Description of an image layer created from a sensor or
        scanner</doc:summary>
        <doc:description>Description of an image layer created from a sensor
        or scanner</doc:description>
        <doc:example />
        <doc:lineage>The spatial entity elements were introduced into EML 2.0
        beta 7</doc:lineage>
      </xs:appinfo>
    </xs:annotation>
  </xs:element>
  <xs:complexType name="SpatialVectorType">
    <xs:attribute name="id" type="xs:ID" use="required" />
    <xs:attribute name="system" type="xs:string" use="optional" />
    <xs:attribute name="scope" use="optional" default="system">
      <xs:simpleType>
        <xs:restriction base="xs:string">
          <xs:enumeration value="system" />
          <xs:enumeration value="document" />
        </xs:restriction>
      </xs:simpleType>
    </xs:attribute>
    <xs:complexContent>
      <xs:extension base="ent:SpatialRepresentation">
        <xs:sequence>
          <xs:sequence>
            <xs:element name="geometricObjectType" type="GeometricObjectType"
            minOccurs="0">
              <xs:annotation>
                <xs:appinfo>
                  <doc:tooltip>Name of point and vector spatial objects used to
                  locate zero-, one-, and two-dimensional spatial locations in
                  the dataset.</doc:tooltip>
                  <doc:summary>Name of point and vector spatial objects used to
                  locate zero-, one-, and two-dimensional spatial locations in
                  the dataset.</doc:summary>
                  <doc:description>Name of point and vector spatial objects
                  used to locate zero-, one-, and two-dimensional spatial
                  locations in the dataset.</doc:description>
                  <doc:example />
                  <doc:lineage>The spatial entity elements were introduced into
                  EML 2.0 beta 7</doc:lineage>
                </xs:appinfo>
              </xs:annotation>
            </xs:element>
            <xs:element name="geometricObjectCount" type="xs:string"
            minOccurs="0">
              <xs:annotation>
                <xs:appinfo>
                  <doc:tooltip>Total number of the point or vector object type
                  occurring in the dataset.</doc:tooltip>
                  <doc:summary>Total number of the point or vector object type
                  occurring in the dataset.</doc:summary>
                  <doc:description>Total number of the point or vector object
                  type occurring in the dataset.</doc:description>
                  <doc:example />
                  <doc:lineage>The spatial entity elements were introduced into
                  EML 2.0 beta 7</doc:lineage>
                </xs:appinfo>
              </xs:annotation>
            </xs:element>
            <xs:element name="topologyLevel" type="TopologyLevel"
            minOccurs="0">
              <xs:annotation>
                <xs:appinfo>
                  <doc:tooltip>Code which identifies the degree of
                  complexity.</doc:tooltip>
                  <doc:summary>Code which identifies the degree of
                  complexity.</doc:summary>
                  <doc:description>Code which identifies the degree of
                  complexity.</doc:description>
                  <doc:example />
                  <doc:lineage>The spatial entity elements were introduced into
                  EML 2.0 beta 7</doc:lineage>
                </xs:appinfo>
              </xs:annotation>
            </xs:element>
          </xs:sequence>
          <xs:sequence>
            <xs:element name="attributeList" type="att:Attribute"/>
            <xs:element name="coverage" type="cov:Coverage"/>
            <xs:element name="physical" type="phys:Physical"/>
            <xs:element name="protocol" type="prot:Protocol"/>
          </xs:sequence>
        </xs:sequence>
      </xs:extension>
    </xs:complexContent>
  </xs:complexType>
  <xs:simpleType name="GeometricObjectType">
    <xs:restriction base="xs:string">
      <xs:enumeration value="points" />
      <xs:enumeration value="curves" />
      <xs:enumeration value="surfaces" />
      <xs:enumeration value="solids" />
      <xs:enumeration value="composites" />
      <xs:enumeration value="complexes" />
    </xs:restriction>
  </xs:simpleType>
  <xs:simpleType name="TopologyLevel">
    <xs:restriction base="xs:string">
      <xs:enumeration value="geometryOnly" />
      <xs:enumeration value="nonPlanarGraph" />
      <xs:enumeration value="planarLineGraph" />
      <xs:enumeration value="fullPlanarGraph" />
      <xs:enumeration value="surfaceGraph" />
      <xs:enumeration value="fullTopology3D" />
    </xs:restriction>
  </xs:simpleType>
</xs:schema>

