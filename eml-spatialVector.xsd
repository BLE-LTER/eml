           xmlns:xs="http://www.w3.org/2001/XMLSchema"
           xmlns:doc="eml:documentation-2.0.0beta8" 
           xmlns:cov="eml:coverage-2.0.0beta8"
           xmlns:ent="eml:entity-2.0.0beta8"
           xmlns:att="eml:attribute-2.0.0beta8"
           xmlns:phys="eml:physical-2.0.0beta8"
           xmlns:prot="eml:protocol-2.0.0beta8"
           xmlns="eml:spatialVector-2.0.0beta8">
  
  <xs:import namespace="eml:documentation-2.0.0beta8" schemaLocation="eml-documentation.xsd" />
  <xs:import namespace="eml:coverage-2.0.0beta8" schemaLocation="eml-coverage.xsd" />
  <xs:import namespace="eml:entity-2.0.0beta8" schemaLocation="eml-entity.xsd" />
  <xs:import namespace="eml:attribute-2.0.0beta8" schemaLocation="eml-attribute.xsd" />
  <xs:import namespace="eml:protocol-2.0.0beta8" schemaLocation="eml-protocol.xsd" />
  <xs:import namespace="eml:physical-2.0.0beta8" schemaLocation="eml-physical.xsd" />
  
