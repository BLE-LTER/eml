<!ELEMENT eml-physical (identifier+, dataObject, dataFormat, connectionURL)>
<!ELEMENT identifier (#PCDATA)>
<!ATTLIST identifier system CDATA #IMPLIED>
<!ELEMENT characterEncoding (#PCDATA)>
<!ELEMENT size (#PCDATA)>
<!ATTLIST size unit CDATA #REQUIRED>
<!ELEMENT authentication (#PCDATA)>
<!ATTLIST authentication method CDATA #IMPLIED>
<!ELEMENT compressionMethod (#PCDATA)>
<!ELEMENT encodingMethod (#PCDATA)>
<!ELEMENT numHeaderLines (#PCDATA)>
<!ELEMENT recordDelimiter (#PCDATA)>
<!ELEMENT maxRecordLength (#PCDATA)>
<!ELEMENT quoteCharacter (#PCDATA)>
<!ELEMENT literalCharacter (#PCDATA)>
<!ELEMENT fieldStartColumn (#PCDATA)>
<!ELEMENT fieldWidth (#PCDATA)>
<!ELEMENT fieldDelimiter (#PCDATA)>
<!ELEMENT dataObject (objectName, size?, authentication*, compressionMethod?, encodingMethod?, characterEncoding?)>
<!ELEMENT objectName (#PCDATA)>
<!ELEMENT connectionURL (#PCDATA)>
<!ELEMENT dataFormat (formatType,(asciiDelimited?|asciiFixed?|binaryRasterInfo?|genericBinary?)>
<!ELEMENT asciiDelimited (fieldDelimiter, numHeaderLines?, maxRecordLength?,quoteCharacter*,recordDelimiter?,literalCharacter?)>
<!ELEMENT asciiFixed (numHeaderLines?, fieldStartColumn?, fieldWidth)+)>
<!ELEMENT binaryRasterInfo (nrows, ncols, nbands?, nbits?, byteorder?, layout?, skipbytes?, ulxmap?, ulymap?, xdim?, ydim?,bandrowbytes?, totalrowbytes?, bandgapbytes?)?>
<!ELEMENT genericBinary (#PCDATA)>
<!ELEMENT nrows (#PCDATA)>
<!ELEMENT ncols (#PCDATA)>
<!ELEMENT nbands (#PCDATA)>
<!ELEMENT nbits (#PCDATA)>
<!ELEMENT byteorder (#PCDATA)>
<!ELEMENT layout (#PCDATA)>
<!ELEMENT skipbytes (#PCDATA)>
<!ELEMENT ulxmap (#PCDATA)>
<!ELEMENT ulymap (#PCDATA)>
<!ELEMENT xdim (#PCDATA)>
<!ELEMENT xdim (#PCDATA)>
<!ELEMENT bandrowbytes (#PCDATA)>
<!ELEMENT totalrowbytes (#PCDATA)>
<!ELEMENT bandgapbytes (#PCDATA)>

