<!-- EML DTD document that defines the structural
     characteristics of every entity in a dataset. -->

<!-- The root element, which contains an identifier and an entity description -->
<!ELEMENT eml-entity (identifier, entity)>

<!-- File identifier of the metadata document -->
<!ELEMENT identifier (#PCDATA)>
<!ATTLIST identifier system CDATA>

<!-- Entity element is a descriptor of an entity in the dataset
     identified by its name. -->
<!ELEMENT entity (entityName, entitySize?, entityFormat, compressionMethod?,
                  endocingMethod?, recordDelimeter?,
                  quoteCharacter?, orientation?, numHeaderLines?,
                  caseSensitive?, authentication*, dataProblem*)>

<!-- Entity name-->
<!ELEMENT entityName (#PCDATA) >

<!-- Entity size -->
<!ELEMENT entitySize (#PCDATA) >
<!ATTLIST entitySize unit CDATA "bytes">

<!-- Entity format (e.g., ASCII, UNICODE, other character encodings,
     name of various binary formats [TIFF]) -->
<!ELEMENT entityFormat (#PCDATA)>
<!-- Method of compression -->
<!ELEMENT compressionMethod (#PCDATA)>
<!-- Method of encoding -->
<!ELEMENT encodingMethod (#PCDATA)>
<!-- The character used to delimit records in the entity -->
<!ELEMENT recordDelimiter (#PCDATA)>
<!-- The character used to delimit quote data values so that the
     filed delimeters can be used in the data value, typically
     " or ' -->
<!ELEMENT quoteCharacter (#PCDATA)>

<!-- Is entity column major or row major? -->
<!ELEMENT orientation EMPTY >
<!ATTLIST orientation columnorrow (columnmajor|rowmajor) "columnmajor">

<!-- Number of header lines or information that prepares data -->
<!ELEMENT numHeaderLines (#PCDATA) >

<!-- Case sensitivity of field -->
<!ELEMENT caseSensitive EMPTY >
<!ATTLIST caseSensitive yesorno (yes|no) "no">
 
<!-- Authentication procedures or techniques -->
<!ELEMENT authentication (#PCDATA) >

<!-- Data anomalies; description of missing data -->
<!ELEMENT dataProblem (paragraph+)>
<!ATTLIST dataProblem problemType (missing|anomaly|error) #REQUIRED>
<!ELEMENT paragraph (#PCDATA)>

<!-- End of file -->
