<!ENTITY % coverage SYSTEM "eml-coverage.dtd">
%coverage;

<!ENTITY % entityBase "(identifier+, entityName, entityDescription?, temporalCov, 
                       geographicCov, taxonomicCov)">
<!ELEMENT identifier (#PCDATA)>
<!ATTLIST identifier system CDATA #IMPLIED >
<!ELEMENT entityName (#PCDATA)>
<!ELEMENT entityDescription (#PCDATA)>

<!ELEMENT spatialRepresentationType (#PCDATA)>
<!ELEMENT lengthUnitCode (#PCDATA)>
<!ELEMENT spatialRepresentation ((%entityBase;), horizontalAccuracy, verticalAccuracy, 
                                 spatialRepresentationType)>
<!ELEMENT horizontalAccuracy (%DataQuality;)>
<!ELEMENT verticalAccuracy (%DataQuality;)>

<!ENTITY % DataQuality "(accuracyReport, quantitativeAccuracyReport)">
<!ELEMENT accuracyReport (#PCDATA)>
<!ELEMENT quantitativeAccuracyReport (quantitativeAccuracyValue, quantitativeAccuracyMethod)>
<!ELEMENT quantitativeAccuracyValue (#PCDATA)>
<!ELEMENT quantitativeAccuracyMethod (#PCDATA)>


